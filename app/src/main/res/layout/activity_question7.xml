<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fallingmoney"
    android:padding="24dp"
    tools:context=".Question7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/prize_money"
        android:text="Prize Money : $5.000"
        android:layout_centerHorizontal="true"
        android:textSize="29dp"
        android:textStyle="italic"
        android:textColor="#27B03C"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who was the director of the film adaptation of 'A Clockwork Orange'  "
        android:textColor="@color/white"
        android:textSize='26dp'
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:layout_above="@id/choices_layout"
        android:id="@+id/Question7"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id='@+id/choices_layout'>

        <Button
            android:layout_width="match_parent"
            android:layout_height ="wrap_content"
            android:layout_margin="10dp"
            android:text="Stanley Kubrick"
            android:backgroundTint="#27b0a2"
            android:textColor="@color/black"
            android:id="@+id/answerA7"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="George A. Romano"
            android:backgroundTint="#27b0a2"
            android:textColor="@color/black"
            android:id="@+id/answerB7"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#27b0a2"
            android:textColor="@color/black"
            android:text="Charlie Chaplin"
            android:id="@+id/answerC7"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Sam Raimi"
            android:backgroundTint="#27b0a2"
            android:textColor="@color/black"
            android:id="@+id/answerD7"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Your Answer"
        android:id="@+id/next_question7"
        android:backgroundTint="#27b02e"
        android:layout_below="@id/choices_layout"
        android:layout_marginTop="40dp"
        />


</RelativeLayout>